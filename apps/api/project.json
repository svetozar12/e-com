{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": ["generate-types"],
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],

      "options": {
        "outputPath": "dist/api",
        "generatePackageJson": true,
        "main": "api/src/main.ts",
        "tsConfig": "api/tsconfig.app.json",
        "assets": ["api/src/assets"]
      },
      "configurations": {
        "production": {
          "sourceMap": false,
          "fileReplacements": [
            {
              "replace": "api/src/environments/environment.ts",
              "with": "api/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "sourceMap": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "build-seed": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "tsc --project tsconfig.seed.json"
      }
    },
    "seed": {
      "dependsOn": ["build-seed"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "node dist/database/seed/seed.js"
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t sgospodinov02/ecom:api -f apps/api/Dockerfile ."
      }
    },
    "deploy": {
      "dependsOn": ["docker-build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push sgospodinov02/ecom:api",
        "cwd": "."
      }
    }
  }
}
