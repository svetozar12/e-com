{
  "name": "protos-file-upload",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "api",
  "targets": {
    "pre-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx buf generate -o ./dist --template ../buf.gen.yaml",
        "cwd": "api/v1/file-upload"
      },
      "outputs": ["{projectRoot}/dist"],
      "inputs": ["{projectRoot}/*.proto"]
    },

    "build": {
      "dependsOn": ["pre-build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx openapi-generator-cli generate -i api/v1/file-upload/dist/openapi/file-upload.swagger.json -o libs/shared/sdk/src/api/v1/file-upload -g typescript-axios --additional-properties=supportsES6=true,typescriptThreePlus=true --skip-validate-spec"
        ],
        "parallel": false
      },
      "outputs": ["{projectRoot}/dist"],
      "inputs": ["{projectRoot}/*.proto"]
    }
  },
  "tags": []
}
